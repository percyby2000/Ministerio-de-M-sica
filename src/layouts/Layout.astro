---
import WhatsAppButton from '../components/WhatsAppButton.astro';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Ministerio de Música - LADP Huamanga</title>
		<meta name="description" content="Ministerio de Música de la Iglesia LADP Huamanga, sirviendo con excelencia y pasión." />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
		
		<!-- Botón flotante de WhatsApp -->
		<WhatsAppButton />
	</body>
</html>

<style is:global>
	:root {
		/* Colores principales */
		--primary-blue: #263971; /* CMYK: 98|84|24|12, RGB: 64|79|151 */
		--primary-orange: #EA7526; /* CMYK: 0|71|90|0, RGB: 234|117|38 */
		
		/* Variaciones secundarias */
		--secondary-blue: #748EC4; /* CMYK: 63|41|0|0, RGB: 116|142|196 */
		--secondary-red: #E1382A; /* CMYK: 1|94|87|0, RGB: 225|56|42 */
		--secondary-yellow: #FAC527; /* CMYK: 0|27|91|0, RGB: 250|197|39 */
		
		/* Colores de uso general */
		--dark-color: #263971;
		--light-color: #f9fafb;
		--text-color: #4b5563;
	}

	* {
		box-sizing: border-box;
	}

	html,
	body {

  
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Cinzel Variable', serif;

		scroll-behavior: smooth;
		color: var(--text-color);
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Barlow Condensed', sans-serif;

		color: var(--dark-color);
	}

	a {
		text-decoration: none;
	}

	img {
		max-width: 100%;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.section-title {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 3rem;
		position: relative;
	}

	.section-title::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 50%;
		transform: translateX(-50%);
		width: 80px;
		height: 3px;
		background-color: var(--primary-color);
	}
</style>
