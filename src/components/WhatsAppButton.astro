  </a>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const whatsappButton = document.getElementById('whatsappButton');
    
    if (whatsappButton) {
      // Mostrar botón después de 1 segundo
      setTimeout(() => {
        whatsappButton.classList.add('visible');
      }, 1000);

      // Animación de pulso cada 10 segundos (menos frecuente)
      setInterval(() => {
        whatsappButton.classList.add('pulse');
        setTimeout(() => {
          whatsappButton.classList.remove('pulse');
        }, 1000);
      }, 10000);

      // Ocultar botón solo al hacer scroll muy rápido hacia abajo
      let lastScrollTop = 0;
      let scrollTimeout: NodeJS.Timeout;
      
      window.addEventListener('scroll', () => {
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        const scrollDifference = Math.abs(scrollTop - lastScrollTop);
        
        // Solo ocultar si el scroll es muy rápido y hacia abajo (más estricto)
        if (scrollTop > lastScrollTop && scrollDifference > 150 && scrollTop > 800) {
          whatsappButton.classList.add('hidden');
        } else if (scrollTop < lastScrollTop || scrollTop < 400) {
          // Mostrar al hacer scroll hacia arriba o estar cerca del top
          whatsappButton.classList.remove('hidden');
        }
        
        // Mostrar automáticamente después de 2 segundos sin scroll
        clearTimeout(scrollTimeout);
        scrollTimeout = setTimeout(() => {
          whatsappButton.classList.remove('hidden');
        }, 2000);
        
        lastScrollTop = scrollTop;
      });

      // Mostrar tooltip al hacer hover
      const whatsappLink = whatsappButton.querySelector('.whatsapp-link');
      if (whatsappLink) {
        whatsappLink.addEventListener('mouseenter', () => {
          whatsappButton.classList.add('show-tooltip');
        });

        whatsappLink.addEventListener('mouseleave', () => {
          whatsappButton.classList.remove('show-tooltip');
        });
      }
    }
  });
</script>

<style>
  .whatsapp-button {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 1000;
    opacity: 0;
    transform: translateY(100px) scale(0.8);
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .whatsapp-button.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .whatsapp-button.hidden {
    opacity: 0;
    transform: translateY(100px) scale(0.8);
  }

  .whatsapp-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
    border-radius: 50%;
    box-shadow: 0 8px 25px rgba(37, 211, 102, 0.4);
    text-decoration: none;
    color: white;
    position: relative;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    overflow: hidden;
  }

  .whatsapp-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #128C7E 0%, #25D366 100%);
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .whatsapp-link:hover::before {
    opacity: 1;
  }

  .whatsapp-link:hover {
    transform: translateY(-5px) scale(1.1);
    box-shadow: 0 15px 35px rgba(37, 211, 102, 0.6);
  }

  .whatsapp-link svg {
    position: relative;
    z-index: 2;
    transition: transform 0.3s ease;
  }

  .whatsapp-link:hover svg {
    transform: scale(1.1) rotate(5deg);
  }

  .whatsapp-tooltip {
    position: absolute;
    right: 70px;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.9);
    color: white;
    padding: 8px 12px;
    border-radius: 8px;
    font-size: 0.85rem;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    pointer-events: none;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .whatsapp-tooltip::after {
    content: '';
    position: absolute;
    left: 100%;
    top: 50%;
    transform: translateY(-50%);
    border: 6px solid transparent;
    border-left-color: rgba(0, 0, 0, 0.9);
  }

  .whatsapp-button.show-tooltip .whatsapp-tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateY(-50%) translateX(-10px);
  }

  /* Animación de pulso */
  .whatsapp-button.pulse .whatsapp-link {
    animation: whatsappPulse 1s ease-in-out;
  }

  @keyframes whatsappPulse {
    0% {
      box-shadow: 0 8px 25px rgba(37, 211, 102, 0.4);
    }
    50% {
      box-shadow: 0 8px 25px rgba(37, 211, 102, 0.4), 0 0 0 20px rgba(37, 211, 102, 0.1);
    }
    100% {
      box-shadow: 0 8px 25px rgba(37, 211, 102, 0.4);
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .whatsapp-button {
      bottom: 20px;
      right: 20px;
    }

    .whatsapp-link {
      width: 55px;
      height: 55px;
    }

    .whatsapp-link svg {
      width: 24px;
      height: 24px;
    }

    .whatsapp-tooltip {
      right: 65px;
      font-size: 0.8rem;
      padding: 6px 10px;
    }
  }

  @media (max-width: 480px) {
    .whatsapp-button {
      bottom: 15px;
      right: 15px;
    }

    .whatsapp-link {
      width: 50px;
      height: 50px;
    }

    .whatsapp-link svg {
      width: 22px;
      height: 22px;
    }

    .whatsapp-tooltip {
      right: 60px;
      font-size: 0.75rem;
      padding: 5px 8px;
    }
  }

  /* Reducir animaciones para usuarios que prefieren menos movimiento */
  @media (prefers-reduced-motion: reduce) {
    .whatsapp-button {
      transition: opacity 0.3s ease;
    }

    .whatsapp-link {
      transition: transform 0.2s ease;
    }

    .whatsapp-button.pulse .whatsapp-link {
      animation: none;
    }
  }
</style>
