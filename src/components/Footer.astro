<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Animación de elementos al hacer scroll
    const revealElements = document.querySelectorAll('.reveal-element');
    
    const revealOnScroll = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const delayAttr = entry.target.getAttribute('data-delay');
          const delay = delayAttr ? parseInt(delayAttr) : 0;
          setTimeout(() => {
            entry.target.classList.add('revealed');
          }, delay);
          revealOnScroll.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });
    
    revealElements.forEach(element => {
      revealOnScroll.observe(element);
    });
    
    // Botón volver arriba
    const backToTopButton = document.querySelector('.back-to-top a');
    
    if (backToTopButton) {
      backToTopButton.addEventListener('click', (e) => {
        e.preventDefault();
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });
    }
  });
</script>

<style>
  .footer {
    background-color: var(--primary-blue);
    color: white;
    padding: 5rem 0 1rem;
    position: relative;
    overflow: hidden;
  }
  
  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at 10% 20%, rgba(255, 255, 255, 0.03) 0%, transparent 20%);
    z-index: 1;
  }
  
  .footer-wave {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    line-height: 0;
    overflow: hidden;
  }
  
  .footer-wave svg {
    width: 100%;
    height: 80px;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 2;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }
  
  /* Logo y sección principal */
  .footer-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background-color: var(--primary-orange);
    border-radius: 12px;
    margin-bottom: 1rem;
    color: white;
    box-shadow: 0 8px 20px rgba(var(--primary-orange-rgb), 0.3);
    transition: all 0.3s ease;
  }
  
  .footer-section:hover .footer-logo {
    transform: rotate(10deg) scale(1.05);
  }
  
  .footer-section h3 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--primary-orange);
    position: relative;
    display: inline-block;
  }
  
  .footer-section h3::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 40px;
    height: 2px;
    background-color: var(--primary-orange);
    transition: width 0.3s ease;
  }
  
  .footer-section:hover h3::after {
    width: 100%;
  }
  
  .footer-section p {
    margin: 0.5rem 0;
    color: #e5e7eb;
    line-height: 1.6;
  }
  
  .tagline {
    font-style: italic;
    color: #9ca3af;
    margin-top: 0.5rem;
  }
  
  /* Enlaces */
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 0.8rem;
    transition: transform 0.3s ease;
  }
  
  .footer-links li:hover {
    transform: translateX(5px);
  }
  
  .footer-link {
    color: #e5e7eb;
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
  }
  
  .link-icon {
    margin-right: 0.5rem;
    color: var(--primary-orange);
    font-size: 0.9rem;
    transition: transform 0.3s ease;
  }
  
  .footer-link:hover {
    color: var(--primary-orange);
  }
  
  .footer-link:hover .link-icon {
    transform: scale(1.2);
  }
  
  /* Redes sociales */
  .social-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #e5e7eb;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    padding: 0.5rem 1rem;
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 30px;
  }
  
  .social-link:hover {
    color: white;
    background-color: var(--primary-orange);
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(var(--primary-orange-rgb), 0.3);
  }
  
  .social-link svg {
    transition: transform 0.3s ease;
  }
  
  .social-link:hover svg {
    transform: scale(1.2);
  }
  
  /* Newsletter */
  .newsletter {
    margin-top: 1.5rem;
  }
  
  .newsletter h4 {
    font-size: 1rem;
    margin-bottom: 0.8rem;
    color: #e5e7eb;
  }
  
  .newsletter-form {
    display: flex;
    gap: 0.5rem;
  }
  
  .newsletter-form input {
    flex: 1;
    padding: 0.8rem 1rem;
    border: none;
    border-radius: 30px;
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }
  
  .newsletter-form input:focus {
    outline: none;
    background-color: rgba(255, 255, 255, 0.15);
    box-shadow: 0 0 0 2px rgba(var(--primary-orange-rgb), 0.5);
  }
  
  .newsletter-form input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }
  
  .newsletter-form button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: none;
    border-radius: 50%;
    background-color: var(--primary-orange);
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .newsletter-form button:hover {
    background-color: #f8c630;
    transform: scale(1.1);
  }
  
    /* Footer bottom */
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-copyright {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-bottom p {
    font-size: 0.9rem;
    color: #9ca3af;
    margin: 0;
  }

  .designer-credit {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
    color: #9ca3af;
  }

  .designer-link {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    color: var(--primary-orange);
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 0.3rem 0.6rem;
    border-radius: 20px;
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(var(--primary-orange-rgb), 0.2);
  }

  .designer-link:hover {
    background-color: rgba(var(--primary-orange-rgb), 0.1);
    border-color: var(--primary-orange);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(var(--primary-orange-rgb), 0.2);
  }

  .designer-link svg {
    transition: transform 0.3s ease;
  }

  .designer-link:hover svg {
    transform: scale(1.1) rotate(5deg);
  }
  
  .back-to-top a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 50%;
    color: white;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  
  .back-to-top a:hover {
    background-color: var(--primary-orange);
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(var(--primary-orange-rgb), 0.3);
  }
  
  /* Animaciones */
  .reveal-element {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.5, 0, 0, 1);
  }
  
  .reveal-element.revealed {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Media queries */
  @media (max-width: 992px) {
    .footer-content {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
    }
  }
  
  @media (max-width: 768px) {
    .footer {
      padding: 4rem 0 1rem;
    }
    
    .footer-wave svg {
      height: 60px;
    }
    
