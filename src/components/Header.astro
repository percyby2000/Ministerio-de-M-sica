  }

  .mobile-logo .logo-image-container {
    width: 50px;
    height: 50px;
    border-radius: 10px;
    background: transparent;
    overflow: hidden;
  }

  .mobile-logo .logo-text h1 {
    font-size: 1.4rem;
    font-weight: 800;
    color: white;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    letter-spacing: -0.02em;
  }

  .mobile-logo .logo-text h2 {
    font-size: 0.85rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
