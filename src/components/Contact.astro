<style>
  .contact-section {
    padding: 5rem 0;
    background-color: #f9fafb;
    position: relative;
    overflow: hidden;
  }

  .contact-section::before {
    content: '';
    position: absolute;
    top: -100px;
    right: -100px;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(var(--primary-orange-rgb), 0.1) 0%, rgba(var(--primary-orange-rgb), 0) 70%);
    z-index: 0;
  }

  .contact-section::after {
    content: '';
    position: absolute;
    bottom: -100px;
    left: -100px;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(var(--primary-blue-rgb), 0.1) 0%, rgba(var(--primary-blue-rgb), 0) 70%);
    z-index: 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 1;
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--primary-blue);
    position: relative;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background-color: var(--primary-orange);
    transition: width 0.3s ease;
  }

  .section-title:hover::after {
    width: 120px;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }

  /* Tarjetas de contacto */
  .contact-info {
    display: flex;
    flex-direction: column;
  }

  .contact-card {
    display: flex;
    align-items: flex-start;
    margin-bottom: 2rem;
    padding: 1.2rem;
    background-color: white;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .contact-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }

  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background-color: var(--primary-orange);
    border-radius: 50%;
    margin-right: 1rem;
    color: white;
    transition: all 0.3s ease;
    box-shadow: 0 5px 15px rgba(var(--primary-orange-rgb), 0.3);
  }

  .contact-card:hover .icon {
    transform: scale(1.1) rotate(5deg);
  }

  .contact-details h3 {
    font-size: 1.2rem;
    margin: 0 0 0.5rem;
    color: var(--primary-blue);
    transition: color 0.3s ease;
  }

  .contact-card:hover .contact-details h3 {
    color: var(--primary-orange);
  }

  .contact-details p {
    margin: 0;
    color: #4b5563;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  /* Redes sociales */
  .social-media {
    margin-top: 2rem;
    padding: 1.5rem;
    background-color: white;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .social-media h3 {
    font-size: 1.2rem;
    margin-bottom: 1.2rem;
    color: var(--primary-blue);
    position: relative;
    display: inline-block;
  }

  .social-media h3::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 40px;
    height: 2px;
    background-color: var(--primary-orange);
    transition: width 0.3s ease;
  }

  .social-media:hover h3::after {
    width: 100%;
  }

  .social-icons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 45px;
    height: 45px;
    background-color: var(--primary-blue);
    border-radius: 50%;
    color: white;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: 0 5px 15px rgba(var(--primary-blue-rgb), 0.2);
  }

  .social-icon:hover {
    background-color: var(--primary-orange);
    color: white;
    transform: translateY(-5px) rotate(10deg);
    box-shadow: 0 8px 20px rgba(var(--primary-orange-rgb), 0.4);
  }

  /* Formulario de contacto */
  .contact-form {
    position: relative;
  }

  .form-header {
    margin-bottom: 1.5rem;
  }

  .form-header h3 {
    font-size: 1.4rem;
    color: var(--primary-blue);
    margin: 0 0 0.5rem;
  }

  .form-header p {
    color: #6b7280;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .contact-form form {
    background-color: white;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .contact-form form:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
    position: relative;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--primary-blue);
    transition: all 0.3s ease;
    font-size: 0.9rem;
  }

  .form-group.focused label {
    color: var(--primary-orange);
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.9rem 1rem;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    font-family: inherit;
    font-size: 1rem;
    transition: all 0.3s ease;
    background-color: #f9fafb;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary-orange);
    box-shadow: 0 0 0 3px rgba(var(--primary-orange-rgb), 0.2);
    background-color: white;
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: #9ca3af;
    opacity: 0.7;
  }

  .submit-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.9rem 1.8rem;
    background-color: var(--primary-orange);
    color: white;
    border: none;
    border-radius: 30px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: 0 5px 15px rgba(var(--primary-orange-rgb), 0.3);
    position: relative;
    overflow: hidden;
  }

  .submit-btn svg {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  .submit-btn:hover {
    background-color: var(--primary-blue);
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(var(--primary-blue-rgb), 0.4);
  }

  .submit-btn:hover svg {
    transform: translateX(3px);
  }

  .submit-btn::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: rgba(255, 255, 255, 0.2);
    transform: rotate(45deg);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .submit-btn:hover::after {
    animation: shine 1.5s ease;
  }

  @keyframes shine {
    0% {
      opacity: 0;
      transform: translateX(-100%) rotate(45deg);
    }
    30% {
      opacity: 0.3;
    }
    100% {
      opacity: 0;
      transform: translateX(100%) rotate(45deg);
    }
  }

  /* Animaciones */
  .reveal-element {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.5, 0, 0, 1);
  }

  .reveal-element.revealed {
    opacity: 1;
    transform: translateY(0);
  }

  /* Media queries */
  @media (max-width: 992px) {
    .contact-content {
      gap: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
      gap: 0;
    }
  }

  @media (max-width: 768px) {
    .contact-section {
      padding: 4rem 0;
    }

    .contact-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .section-title {
      font-size: 2rem;
      margin-bottom: 2.5rem;
    }

    .contact-card {
      padding: 1rem;
    }

    .icon {
      width: 45px;
      height: 45px;
    }

    .contact-details h3 {
      font-size: 1.1rem;
    }

    .contact-details p {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 576px) {
    .contact-section {
      padding: 3rem 0;
    }

    .section-title {
      font-size: 1.8rem;
      margin-bottom: 2rem;
    }

    .contact-form form {
      padding: 1.5rem;
    }

    .form-group label {
      font-size: 0.85rem;
    }

    .form-group input,
    .form-group textarea {
      padding: 0.8rem;
      font-size: 0.95rem;
    }

    .submit-btn {
      width: 100%;
      padding: 0.8rem 1.5rem;
    }
  }
</style>